CREATE TABLE colleges (
    college_id INT AUTO_INCREMENT PRIMARY KEY,
    college_name VARCHAR(100) NOT NULL,
    state VARCHAR(50),
    city VARCHAR(50),
    description TEXT,
    rating DECIMAL(2, 1),
    image_url VARCHAR(255)
);


